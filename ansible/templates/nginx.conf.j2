# {{ ansible_managed }}
# =============================================================================
# Nginx Reverse Proxy — {{ app_name }}
# Generated by Ansible — do not edit manually on the server.
# =============================================================================

{% if ssl_mode == 'full_strict' %}
# ── HTTP → HTTPS redirect ────────────────────────────────
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name {{ domain }} www.{{ domain }} *.{{ domain }} _;
    server_tokens off;
    return 301 https://$host$request_uri;
}

# ── HTTPS (Cloudflare Full Strict + Origin Certificate) ──
server {
    listen 443 ssl http2 default_server;
    listen [::]:443 ssl http2 default_server;
    server_name {{ domain }} www.{{ domain }} *.{{ domain }} _;
    server_tokens off;

    # --- Cloudflare Origin Certificate ---
    ssl_certificate     {{ ssl_cert_path }};
    ssl_certificate_key {{ ssl_key_path }};
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

{% else %}
# ── HTTP only (Cloudflare Flexible — SSL terminates at CF) ─
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name {{ domain }} www.{{ domain }} *.{{ domain }} _;
    server_tokens off;
{% endif %}

    # --- Security Headers ---
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # --- Gzip Compression ---
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript
               application/javascript application/json application/xml
               image/svg+xml;

    # --- API Backend (Express :{{ backend_port }}) ---
    location /api/ {
        proxy_pass http://127.0.0.1:{{ backend_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        client_max_body_size {{ nginx_client_max_body_size }};
    }

    # --- Share Page (OG meta for social sharing) ---
    location /p/ {
        proxy_pass http://127.0.0.1:{{ backend_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
    }

    # --- Frontend (Vite preview :{{ frontend_port }}) ---
    location / {
        proxy_pass http://127.0.0.1:{{ frontend_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}
