# {{ ansible_managed }}
# =============================================================================
# Nginx reverse proxy — Docker Compose entry point
# Generated by Ansible — do not edit manually on the server.
# =============================================================================

upstream backend {
    server backend:5001;
}

upstream frontend {
    server frontend:80;
}

{% if ssl_mode | default('flexible') == 'full_strict' %}
# ── HTTP → HTTPS redirect ────────────────────────────────
server {
    listen 80;
    server_name {{ domain | default('_') }} _;
    return 301 https://$host$request_uri;
}

# ── HTTPS (Cloudflare Full Strict + Origin Certificate) ──
server {
    listen 443 ssl http2;
    server_name {{ domain | default('_') }} _;

    # --- Cloudflare Origin Certificate ---
    ssl_certificate     /etc/ssl/cloudflare/eonsclover.com.pem;
    ssl_certificate_key /etc/ssl/cloudflare/eonsclover.com.key;
    ssl_protocols       TLSv1.2 TLSv1.3;
    ssl_ciphers         HIGH:!aNULL:!MD5;

{% else %}
# ── HTTP only (Cloudflare Flexible — SSL terminates at CF) ─
server {
    listen 80;
    server_name _;
{% endif %}

    # ── Security headers ──────────────────────────────────
    add_header X-Frame-Options        "SAMEORIGIN"       always;
    add_header X-Content-Type-Options "nosniff"           always;
    add_header Referrer-Policy        "strict-origin-when-cross-origin" always;

    # ── Max upload size ───────────────────────────────────
    client_max_body_size {{ nginx_client_max_body_size }};

    # ── Gzip Compression ─────────────────────────────────
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript
               application/javascript application/json application/xml
               image/svg+xml;

    # ── API routes → backend ──────────────────────────────
    location /api/ {
        proxy_pass         http://backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_read_timeout 60s;
    }

    # ── Image storage → backend ────────────────────────────
    location /storage/ {
        proxy_pass         http://backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_cache_valid  200 7d;
        expires            7d;
    }

    # ── Social sharing OG meta → backend ──────────────────
    location /p/ {
        proxy_pass         http://backend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
    }

    # ── Everything else → frontend SPA ────────────────────
    location / {
        proxy_pass         http://frontend;
        proxy_http_version 1.1;
        proxy_set_header   Host              $host;
        proxy_set_header   X-Real-IP         $remote_addr;
        proxy_set_header   X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
    }
}
